    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stupass"
        app:layout_constraintBottom_toTopOf="@+id/eamil"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/eamil"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="User name"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="13dp"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="Password"
        android:drawableStart="@drawable/ic_lock"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="25dp"
        android:drawablePadding="13dp"
        app:layout_constraintBottom_toTopOf="@+id/loginBU"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/loginBU"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Log in"
        android:backgroundTint="#FEC62C"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signUpTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Sign up"
        android:textColor="#FEC62C"
        android:layout_marginStart="8dp"
        android:textStyle="bold"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="First time?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2" />

